<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to customer_path(@tweet.customer.id) do %>
          <%= attachment_image_tag @tweet.customer, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= @tweet.customer.name %>
        <% end %>
      </td>
      <td>
        <%= link_to tweet_path(@tweet.id) do %>
        <%= @tweet.title %><br>
        <% end %>
      </td>
      <td id="likes_buttons_<%= @tweet.id %>">
        <%= render partial: 'customer/likes/like', locals: { tweet: @tweet} %>
      </td>
      <td><%= @tweet.body %></td>
      <td>PV数　<%= @tweet.impressions_count %></td>
      <td>
        <% if @tweet.customer_id == current_customer.id %>
        <%= link_to "Edit", edit_tweet_path(@tweet), class: "btn btn-success" %>
        <% end %>
      </td>
      <td>
        <% if @tweet.customer_id == current_customer.id %>
          <%= link_to "Destroy", tweet_path(@tweet), class: "btn btn-sm btn-danger", data: {confirm: "本当に削除しますか？"}, method: :delete %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <p>コメント件数：<%= @tweet.comments.count %></p>
      </td>
    </tr>
    <% @tweet.comments.each do |tweet_comment| %>
    <tr>
      <td>
        <%= link_to customer_path(tweet_comment.customer.id) do %>
          <%= attachment_image_tag tweet_comment.customer, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= tweet_comment.customer.name %>
        <% end %>
        <%= tweet_comment.created_at.strftime('%Y/%m/%d') %><%= tweet_comment.comment %>
      </td>
    </tr>
    <tr>
      <td>
        <% if tweet_comment.customer_id == current_customer.id %>
          <%= link_to "Destroy", tweet_comment_path(tweet_comment.tweet, tweet_comment), class: "btn btn-sm btn-danger", data: {confirm: "本当に削除しますか？"}, method: :delete %>
        <% end %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td>
        <%= form_with(model:[@tweet, @tweet_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>