
   <div class="row">
      <div id="box">
        <div id="images">
          <%= link_to dayrank_path, class: 'rankimages' do %>
            <div class="image1"></div>
          <% end %>
          <%= link_to weekrank_path, class: 'rankimages' do %>
            <div class="image2"></div>
          <% end %>
          <%= link_to monthrank_path, class: 'rankimages' do %>
            <div class="image3"></div>
          <% end %>
          <%= link_to yearrank_path, class: 'rankimages' do %>
            <div class="image4"></div>
          <% end %>
        </div>
      </div>
    </div>
<% @tweets.each do |tweet| %>
  <div class="container d-flex justify-content-center">
    <div class="d-flex">
      <div class="mr-auto">
      <%= link_to customer_path(tweet.customer.id) do %>
        <%= attachment_image_tag tweet.customer, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
        <p><%= tweet.customer.name %></p>
      <% end %>
      </div>

      <div class="ml-auto d-flex">
        <%= link_to tweet_path(tweet.id) do %>
          <%= attachment_image_tag tweet, :tweet_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <p><%= tweet.title %></p>
        <% end %>
        <p>内容：<%= tweet.body %></p>
        <div class="ml-auto pl-5">
          PV数　<%= tweet.impressions_count %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="d-flex justify-content-center">
  <%= paginate @tweets %>
  </div>