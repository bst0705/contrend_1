<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h1>FOLLOWERS</h1>
      <table class="table text-center">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= link_to customer_path(customer) do %>
                  <%= attachment_image_tag customer, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
                  <%= customer.name %>
                <% end %>
              </td>
              <td>
                <div id="follows_buttons_<%= customer.id %>">
                  <%= render partial: 'customer/customers/followbuttons', locals: { customer: customer} %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>