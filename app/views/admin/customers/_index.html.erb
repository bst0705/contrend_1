<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>月間ランキング</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="text-center text-nowrap">投稿者</th>
          <th class="text-center">自己紹介</th>
        </tr>
      </thead>
      <% customers.each do |customer| %>
      <tbody>
        <tr>
          <td class="align-middle text-center text-nowrap">
            <%= link_to admin_customer_path(customer.id) do %>
              <%= attachment_image_tag customer, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <%= customer.name %>
            <% end %>
          </td>
          <td class="align-middle text-center">
            <%= customer.introduction %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>