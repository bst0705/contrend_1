<div class="container ml-5">
    <h2 class="customers my-4 px-1 text-center">
      <%= @customer.name %>さんの会員編集
    </h2>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
    <table class="table border-0">
        <tbody>
          <tr>
            <td class="border-0 text-left">会員ID</td>
            <td class="border-0 text-left"><%= @customer.id %></td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              会員ステータス
            </td>
            <td class="border-0 text-left">
              <%= f.radio_button :is_valid, "true" %>有効
              <%= f.radio_button :is_valid, "false" %>退会
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left"></td>
            <td class="border-0 text-left d-flex">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </td>
          </tr>
       </tbody>
    </table>
  <% end %>
</div>
